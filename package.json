{
  "name": "ai-stock-toc-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Warehouse Assistant (ТОС + AI) монорепозиторій",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --if-present --workspaces",
    "format": "npm run format --if-present --workspaces",
    "start": "npm run start --workspaces",
    "docs": "npm --workspace backend run docs",
    "import:turnover": "npm --workspace backend run import:turnover"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=20"
  }
}
